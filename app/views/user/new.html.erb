<div class="wrapper-user">
    <div class="sign_form">
        <h1>Sign Up</h1>
        <%= form_with scope: :user, url: signup_path, local: true do |f| %>
        <div class="form-group">
            <%= f.label :invite%>
            <%= f.text_field :invite, :class => 'form-control', :autocomplete =>'off'%>
        </div>
        <div class="form-group">
            <%= f.label :username%>
            <%= f.text_field :username, :class => 'form-control', :autocomplete =>'off'%>
        </div>
        <div class="form-group">
            <%= f.label :password%>
            <%= f.password_field :password, :class => 'form-control', :minlength => 6%>
        </div>
        <div class="form-group">
            <%= f.label :password_confirmation%>
            <%= f.password_field :password_confirmation, :class => 'form-control', :minlength => 6%>
        </div>

        <%= f.submit 'Sign up', :class => "btn btn-primary"%>
        <a class='btn btn-danger text-light' href='/login'>Login</a>
        <% end %>

        <% if @user.errors.any? %>
        <ul class="Signup_Errors">
            <% for message_error in @user.errors.full_messages %>
            <li>* <%= message_error %></li>
            <% end %>
        </ul>
        <% end %>
    </div>
</div>
